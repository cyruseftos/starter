{
    "compilerOptions": {
        "baseUrl": ".",
        "declaration": true,
        "importHelpers": true,
        "lib": ["esnext", "dom"],
        "module": "esnext",
        "moduleResolution": "node",
        "noEmit": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "pretty": true,
        "rootDir": ".",
        "skipLibCheck": true,
        "sourceMap": true,
        "strict": true,
        "target": "esnext"
    },
    "exclude": ["node_modules", "**/node_modules/*"]
}
