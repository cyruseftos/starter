{
  "private": true,
  "version": "0.0.0",
  "name": "babel-7-typescript",
  "description": "Example TypeScript project built on top of new Babel 7 features",
  "scripts": {
    "build": "yarn clean:build && babel src --ignore src/**/__tests__ --out-dir dist --extensions '.ts'",
    "clean:build": "rm -rf dist",
    "coverage": "jest --coverage",
    "prepublishOnly": "yarn build",
    "start": "babel-node --extensions '.ts' index.ts",
    "test": "jest",
    "test:watch": "jest -o --watch",
    "typecheck": "tsc"
  },
  "jest": {
    "preset": "ts-jest",
    "moduleDirectories": [
      "./node_modules",
      "./src"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ],
    "transform": {
      "^.+\\.(js|jsx|ts|tsx)$": "babel-jest"
    }
  },
  "resolutions": {
    "babel-core": "^7.0.0-bridge.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.0",
    "@babel/core": "^7.2.2",
    "@babel/node": "^7.2.2",
    "@babel/plugin-proposal-class-properties": "^7.2.1",
    "@babel/plugin-proposal-json-strings": "^7.2.0",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/plugin-syntax-import-meta": "^7.2.0",
    "@babel/preset-env": "^7.2.0",
    "@babel/preset-typescript": "^7.1.0",
    "@babel/register": "^7.0.0",
    "@types/jest": "^23.3.10",
    "@types/node": "^10.12.15",
    "babel-core": "^6.26.3",
    "babel-jest": "^23.6.0",
    "babel-plugin-module-resolver": "^3.1.1",
    "jest": "^23.6.0",
    "jest-image-snapshot": "^2.7.0",
    "node": "^11.0.0",
    "puppeteer": "^1.11.0",
    "ts-jest": "^23.10.5",
    "tslint": "^5.12.0",
    "tslint-config-prettier": "^1.17.0",
    "tslint-config-standard": "^8.0.1",
    "typescript": "^3.2.2"
  }
}
